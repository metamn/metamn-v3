{
  "text_styles": [
    {
      "name": "Default",
      "description": "The basic settings for a text.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-regular"
        },
        {
          "name": "scale",
          "value": "default"
        },
        {
          "name": "colors",
          "value": "black-on-white"
        }
      ],
      "properties": [
        {
          "name": "letter-spacing",
          "value": "1.1px"
        }
      ]
    },
    {
      "name": "Metamn",
      "description": "Settings for the Metamn logo.",
      "based_on": "Silkscreen",
      "mixins": [
        {
          "name": "font",
          "value": "silkscreen-regular"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ]
    },
    {
      "name": "Large-1",
      "description": "Large text for the bio",
      "based_on": "Nimbus Sans Black",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-black"
        },
        {
          "name": "scale",
          "value": "large-8"
        },
        {
          "name": "word-wrap",
          "value": ""
        }
      ],
      "properties": [
        {
          "name": "line-height",
          "value": "1"
        },
        {
          "name": "color",
          "value": "$white"
        }
      ],
      "responsive": [
        {
          "breakpoint": "laptop",
          "mixins": [
            {
              "name": "scale",
              "value": "large-7"
            }
          ]
        },
        {
          "breakpoint": "tablet",
          "mixins": [
            {
              "name": "scale",
              "value": "large-5"
            }
          ],
          "properties": [
            {
              "name": "color",
              "value": "$black"
            }
          ]
        },
        {
          "breakpoint": "mobile",
          "mixins": [
            {
              "name": "scale",
              "value": "large-2"
            }
          ],
          "properties": [
            {
              "name": "color",
              "value": "$black"
            },
            {
              "name": "line-height",
              "value": "1.48"
            }
          ]
        }
      ]
    },
    {
      "name": "Large-2",
      "description": "Smaller text for the bio",
      "based_on": "Nimbus Sans Black",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-black"
        },
        {
          "name": "scale",
          "value": "large-6"
        },
        {
          "name": "word-wrap",
          "value": ""
        }
      ],
      "properties": [
        {
          "name": "line-height",
          "value": "1"
        },
        {
          "name": "color",
          "value": "$black"
        }
      ],
      "responsive": [
        {
          "breakpoint": "laptop",
          "mixins": [
            {
              "name": "scale",
              "value": "large-5"
            }
          ]
        },
        {
          "breakpoint": "tablet",
          "mixins": [
            {
              "name": "scale",
              "value": "large-5"
            }
          ]
        },
        {
          "breakpoint": "mobile",
          "mixins": [
            {
              "name": "scale",
              "value": "large-2"
            }
          ],
          "properties": [
            {
              "name": "line-height",
              "value": "1.48"
            }
          ]
        }
      ]
    }
  ]
}
